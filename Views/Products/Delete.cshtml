@model EmployeeCrudPdf.Models.Product
<h3>Delete Product</h3>
<div class="alert alert-warning">Are you sure you want to delete this product?</div>
<dl class="row">
  <dt class="col-sm-3">Name</dt><dd class="col-sm-9">@Model.Name</dd>
  <dt class="col-sm-3">Price</dt><dd class="col-sm-9">@Model.Price.ToString("C")</dd>
  <dt class="col-sm-3">Category</dt><dd class="col-sm-9">@Model.Category</dd>
</dl>
<form asp-action="Delete" method="post">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
</form>

